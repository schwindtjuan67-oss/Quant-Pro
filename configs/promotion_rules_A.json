{
  "phase": "A",
  "filters": {
    "reject_degenerate": true,
    "thresholds": {
      "trades_min": { "min": 250 },
      "dd_max":     { "max": 0.45 }
    }
  },
  "promotion": {
    "min_seeds_passed": 2,
    "min_windows_passed": 2,
    "top_k": 50
  },
  "scoring": {
    "phase_a_score": {
      "formula": "trades_mean - 0.01 * dd_max",
      "notes": [
        "Phase A prioritizes activity and diversity.",
        "Risk metrics do not gate, only lightly penalize."
      ]
    },
    "secondary_metrics": [
      "robust_score_mean",
      "expectancy_mean",
      "pf_mean",
      "winrate_mean"
    ]
  },
  "audit": {
    "write_why_rejected_csv": true
  }
}
